


@model IEnumerable<SistemaStock.Modelos.Producto>
@using SistemaStock.Utilidades
@{
    ViewData["Title"] = "Home Page";
}

<header class="header">
    <div class="conteiner pt-sm-5 ps-4">
        <div class="heading-primary">
            Nuestros productos....
        </div>
    </div>
</header>


<section>
    <div class="container my-2">
        <div class="colcol-lg-6 col-md-6 col-sm-6 d-flex">
            <div class="input-group mb-3">
                <input type="text" class="form-control" placeholder="Buscar...." aria-label="Buscar" aria-describedby="button-addon2" />
                <button class="btn btn-outline-primary">
                    <i class="bi bi-search"></i>
                </button>
            </div>
        </div>

        <div class="row">
            @foreach (var producto in Model)
            {
                <div class="col-lg-3 col-md-6 col-sm-6 d-flex">
                    <div class="card w-100 my-2">
                        <img src="@DS.ImagenRut@producto.ImagenUrl" class="card-img-top" />
                        <div class="card-body d-flex flex-column">
                            <h4 class="card-title">@producto.Descripcion</h4>
                            <p class="card-text">
                                @if (producto.Moneda == true)
                                {
                                <p>USD : @producto.Precio</p>
                                }
                                else
                                {
                                <p>UYU : @producto.Precio</p>
                                }

                            </p>
                            <div class="card-footer d-flex align-items-end pt-3 bg-white">
                                <a asp-action="Detalle" asp-route-id="@producto.Id" class="btn btn-primary">
                                    <i class="bi bi-tags-fill"></i>
                                    Detalle
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

    </div>
</section>